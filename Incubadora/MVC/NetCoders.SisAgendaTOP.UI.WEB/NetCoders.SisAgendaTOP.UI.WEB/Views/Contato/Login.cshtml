@model UsuarioMOD
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login da Acesso</title>

    <!--Importamos os Scripts do JQUERY-->
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.2.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>

    <!--Importamos os Scripts do BOOTSTRAP-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Importamos as bibliotecas de CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap.cerulean.min.css" rel="stylesheet" />*@

</head>
<body>
    <header>
        <img src="~/Content/Images/logo.png" />

        @if (TempData["Mensagem"] != null)
        {
            @Html.Partial("_PartialMensagem");
        }
    </header>
    <section class="container">
        <fieldset>
            <legend>Informe seus dados</legend>
            @using (Html.BeginForm())
            {
                @Html.LabelFor(x => x.Nome)
                @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nome)
                @Html.Br()

                @Html.LabelFor(x => x.Senha)
                @Html.PasswordFor(x => x.Senha, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Senha)
                @Html.Br()

                @Html.Button("Submit", "logar", "logar", "Logar", "btn btn-success")
            }
        </fieldset>
    </section>
    <footer>
        <nav class="navbar navbar-default navbar-fixed-bottom">
            <div class="container">
                <p>&copy; Todos os direitor reservados ao <strong><mark>John Leno Brito</mark></strong></p>
            </div>
        </nav>

    </footer>
</body>
</html>
