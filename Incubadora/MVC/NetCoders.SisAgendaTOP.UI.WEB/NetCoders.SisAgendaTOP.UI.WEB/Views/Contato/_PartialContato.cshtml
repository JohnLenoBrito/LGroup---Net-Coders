@model ContatoMOD

@Html.LabelFor(x => x.Nome)
@Html.TextBoxFor(x => x.Nome, new { @class = "form-control", required = "required", placeholder="Informe seu nome completo" })
@Html.Br()

@Html.LabelFor(x => x.Email)
@Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required", placeholder="Informe seu e-mail pessoal" })
@Html.Br()

@Html.LabelFor(x => x.Telefone)
@Html.TextBoxFor(x => x.Telefone, new { @class = "form-control", required = "required" })
@Html.Button("button", "consultar", "consultar", "Consultar", "btn btn-danger btn-xs")
@Html.Br()

@Html.LabelFor(x => x.DataNascimento)
@Html.TextBoxFor(x => x.DataNascimento, "{0:dd/MM/yyyy}", new { @class = "form-control", required = "required" })
@Html.Br()

@Html.LabelFor(x => x.Sexo)
@Html.DropDownListFor(x => x.Sexo.Codigo, ViewBag.Sexos as SelectList, new { @class = "form-control", required = "required" })
@Html.Br()